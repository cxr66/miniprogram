/* tabbar组件样式全局化 */
.tabbar_box{
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 999;
    width: 100%;
    height: 100rpx;
    border-top: 1rpx solid #d7d7d7; 
}

.tabbar_nav{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    font-size: 20rpx;
    height: 100%;
}
.tabbar_icon{
    width: 34rpx;
    height:37rpx;
    margin-bottom: 10rpx;
}
.tabbar_nav:nth-child(3) image{ 
    width:89rpx;
    height:89rpx;
    margin-bottom: 0;
}
