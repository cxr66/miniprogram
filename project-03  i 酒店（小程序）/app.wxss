/* 好看的按钮css */
.color_btn{   
    line-height:40rpx;  
    padding: 0 20rpx;
    color:#ffffff;  
    background-color:#ededed;  
    font-weight:bold;  
    font-family:Arial;  
    background:-webkit-gradient(linear, left top, left bottom, color-start(0.05, #599bb3), color-stop(1, #408c99));  
    background:-moz-linear-gradient(top, #599bb3 5%, #408c99 100%);  
    background:-o-linear-gradient(top, #599bb3 5%, #408c99 100%);  
    background:-ms-linear-gradient(top, #599bb3 5%, #408c99 100%);  
    background:linear-gradient(to bottom, #599bb3 5%, #408c99 100%);  
    background:-webkit-linear-gradient(top, #599bb3 5%, #408c99 100%);  
    filter:progid:DXImageTransform.Microsoft.gradient(startColorstr='#599bb3', endColorstr='#408c99',GradientType=0);  
    border:0 solid #dcdcdc;  
    -webkit-border-top-left-radius:8rpx;  
    -moz-border-radius-topleft:8rpx;  
    border-top-left-radius:8rpx;  
    -webkit-border-top-right-radius:8rpx;  
    -moz-border-radius-topright:8rpx;  
    border-top-right-radius:8rpx;  
    -webkit-border-bottom-left-radius:8rpx;  
    -moz-border-radius-bottomleft:8rpx;  
    border-bottom-left-radius:8rpx;  
    -webkit-border-bottom-right-radius:8rpx;  
    -moz-border-radius-bottomright:8rpx;  
    border-bottom-right-radius:8rpx;  
    -moz-box-shadow:0px 10rpx 14rpx -7rpx #276873;  
    -webkit-box-shadow:0px 10px 14rpx -7rpx #276873;  
    box-shadow:0px 10rpx 14rpx -7rpx #276873;  
    text-align:center;  
    text-decoration:none;  
}  

/* 弹窗 */
.mask{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  z-index: 90;
  background:rgba(0,0,0,1);
  opacity:0.3;
}

 