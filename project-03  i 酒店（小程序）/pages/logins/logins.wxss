/* pages/logins/logins.wxss */


page {
  background-color: #fff;
  height: 100%;
  /* overflow: hidden; */
}

.header {
  width: 100%;
  height: 400rpx;
  position: relative;
}

.header .bg {
  width: 100%;
  height: 400rpx;
}

.header .logo {
  width: 160rpx;
  height: 160rpx;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
}

/* 酒店名称 */

.title {
  font-size: 32rpx;
  text-align: center;
  margin: 30rpx 0 35rpx 0;
}

.title text {
  display: block;
  line-height: 60rpx;
}

.title .english {
  color: #777;
  font-size: 28rpx;
}

/* 表单 */

.form {
  width: 80%;
  margin: auto;
  overflow: hidden;
}

/* 单个 */

.login_in {
  /* overflow: hidden; */
  color: #777;
  border-radius: 40rpx;
  border: 4rpx solid #eee;
  margin: 15rpx 0;
}

.login_in image {
  width: 40rpx;
  height: 40rpx;
  margin: 20rpx;
}

.login_in input {
  width: 80%;
  padding-left: 5%;
  line-height: 80rpx;
  height: 80rpx;
  font-size: 28rpx;
}

.login_in .phone {
  width: 36%;
  line-height: 80rpx;
  text-align: center;
}

.login_in .sendcode {
  color: #fff;
  background-color: #2080de;
}

.login_in .interval {
  font-weight: bold;
  color: #fff;
}

/* 按钮 */

.login_btn {
  color: #fff;
  background-color: #2080de;
  line-height: 80rpx;
  text-align: center;
  font-size: 28rpx;
}

/* 下拉框 */

.select_box {
  position: relative;
}

.select_box .select {
  box-sizing: border-box;
  line-height: 80rpx;
  border-radius: 4rpx;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
}

.select_box .select .select_text {
  font-size: 28rpx;
  color: #777;
  line-height: 80rpx;
  flex: 1;
}

.select_box .select .select_img {
  width: 40rpx;
  height: 40rpx;
  display: block;
  transition: transform 0.3s;
}

.select_box .select .select_img_rotate {
  transform: rotate(180deg);
}

/* 选择 list */

.select_box .option_box {
  position: absolute;
  top: calc(100% - 2rpx);
  left: -4rpx;
  width: 600rpx;
  z-index: 9;
  box-sizing: border-box;
  height: 0;
  overflow-y: auto;
  background: #fff;
  transition: height 0.3s;
  border-left: 1rpx solid #efefef;
  border-right: 1rpx solid #efefef;
}

.select_box .option_box .option {
  padding-left: 20rpx;
  display: block;
  line-height: 80rpx;
  font-size: 28rpx;
  border-top: 1rpx solid #efefef;
}

/* 其他方式登录 */

.check_others {
  overflow: hidden;
  font-size: 22rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(32, 128, 222, 1);
}
