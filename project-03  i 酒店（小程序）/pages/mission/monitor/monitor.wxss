/* pages/mission/monitor/monitor.wxss */
page{
  background-color: #fff;
}
/* 表单 */
.form{
  width: 85%;
  margin:20rpx auto; 
}
/* 单个 */
.login_in{
  width: 78%;
  color: #777777;
  border-radius: 4rpx;
  border: 4rpx solid #eeeeee; 
  margin: 0 0 0 20rpx;
}
/* 下拉框 */
.select_box{
  position: relative;
}
.select_box .select{
  box-sizing: border-box;
  line-height: 80rpx; 
  border-radius: 4rpx;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
}
.select_box .select .select_text{
  font-size: 28rpx;
  color: #777777;
  line-height: 80rpx;
  flex: 1;
}
.select_box .select .select_img{
  width: 40rpx;
  height: 40rpx;
  display: block;
  transition:transform 0.3s;
}
.select_box .select .select_img_rotate{
  transform:rotate(180deg); 
}
/* 选择 list */
.select_box .option_box{
  
  position: absolute;
  top: calc(100% - 2rpx);
  left: -4rpx;
  width: calc(100% + 4rpx);
  z-index: 9;
  box-sizing: border-box;
  height: 0;
  overflow-y: auto;
  background: #fff;
  transition: height 0.3s;
  border-left: 1rpx solid #efefef;
  border-right: 1rpx solid #efefef;
}
.select_box .option_box .option{
  padding-left: 20rpx;
  display: block;
  line-height: 80rpx; 
  font-size: 28rpx;
  border-top: 1rpx solid #efefef;
}
.confirm{
  padding: 10rpx 20rpx;
}

video{
  width: 100%;
  height: 500rpx;
}
.title{
  line-height: 60rpx;
  font-weight: bolder;
}