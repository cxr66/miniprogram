/* pages/mission/news/news.wxss */
page{
  background-color: #ffffff;
}
.section{
  width: 96%;
  margin: auto;
  padding: 20rpx 0;
  font-size: 24rpx;
  line-height: 60rpx;
  border-bottom: 1rpx solid #f2f2f2;
}
.section .upload{
  width: 140rpx;
  height: 140rpx;
  margin: 20rpx 0;
  overflow: hidden;
  border:1px dashed rgba(204,204,204,1);
}
.section .upload .defaultImg{
  width: 72rpx;
  height: 60rpx;
  margin: 40rpx auto; 
  display: block;
}
.newImg{
  width: 100%;

}
/* button */
.sign_btn{
  margin: 40rpx auto;
  color: #FFFFFF;
  font-size: 28rpx;
  text-align: center;
  line-height: 80rpx;
  border-radius: 10rpx;
  background-color: #2080DE;
}