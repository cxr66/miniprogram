/* tab部分 */
.tab {
  width: 100%; 
  white-space: nowrap;
  box-sizing: border-box;
  overflow-x: scroll;
  line-height: 80rpx;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 9;
}
.tab-item {
  display: inline-block;
  text-align: center;
  font-size: 26rpx;
  color: #222;
}

.active {
  color: #2080de;
  border-bottom: 4rpx solid #2080de;
}
/* 内容 */
.content{
 margin-top: 100rpx;  
 font-size: 26rpx;
}
.content-item{
 overflow-y: scroll;
 background-color: #fff;
}
 
.table{
  overflow: hidden;
  margin: 20rpx auto 0 auto;
  box-shadow:0 2rpx 6rpx 0rpx rgba(204,204,204,1);
  border-radius:10rpx;
}
.table ul{
  width: 100%;
  font-size: 24rpx;
  background-color: #FFFFFF;
  border-bottom: 1rpx solid #eeeeee;
}
.table ul li{
  width: 20%;
  line-height: 80rpx;
  text-align: center;
  overflow-x: scroll;
} 
.table .list_style{
  color: #777777;
}
.table .date_color{
  color: #2080DE;
}
 