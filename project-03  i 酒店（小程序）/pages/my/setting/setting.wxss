/* pages/my/setting/setting.wxss */
/* section部分 */

.section{
  margin: 20rpx auto;
}
.section_item{
  line-height: 100rpx;
  padding: 0 20rpx;
  font-size: 24rpx;
  color: #222222;
  background-color: #FFFFFF;
  border-bottom: 1rpx solid#EEEEEE;
}
.section_item text{
  float: right;
  color: #777777;
}
.section_item image{
  width: 24rpx;
  height: 42rpx;
  float: right;
  margin-top: 29rpx;
}
/* button */
.sign_btn{
  margin: 40rpx auto;
  color: #FFFFFF;
  font-size: 28rpx;
  text-align: center;
  line-height: 80rpx;
  border-radius: 10rpx;
  background-color: #2080DE;
}